@page
@model BuiPhuocLocRazorPages.Pages.LoginModel
@{

}
<h1>Login</h1>

<form method="post">
    <div class="form-group">
        <label>Email:</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password:</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
    }
</form>
