@page
@model BuiPhuocLocRazorPages.Pages.Staff.NavigatePageModel
@{
    var accountRole = HttpContext.Session.GetInt32("AccountRole");

    if (accountRole != 1)
    {
        Response.Redirect("/Error");
    }
}

<div class="d-flex flex-column vh-100">
    <!-- Navigation Bar -->
    <div class="bg-dark text-white py-3 d-flex justify-content-center">
        <div class="d-flex gap-2">
            <a asp-page="/Staff/CategoryPages/Index" class="btn btn-primary">Categories</a>
            <a asp-page="/Staff/NewsPages/Index" class="btn btn-secondary">News</a>
            <a asp-page="/Staff/UpdateProfile" class="btn btn-primary">Profiles</a>
            <a asp-page="/Staff/MyArticles" class="btn btn-success">My Articles</a>
        </div>
    </div>
    <a asp-page="/Login" class="btn btn-secondary">Logout</a>
    <!-- Main Content -->
    <div class="flex-grow-1 d-flex justify-content-center align-items-center">
        <div>
            <h1>Welcome to the Navigation Page</h1>
            <p>Select an option from the navigation bar to proceed.</p>
        </div>
    </div>
</div>